{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended"
  ],
  "ignoreDeps": [],
  "labels": [
    "dependencies"
  ],
  "packageRules": [
    {
      "matchManagers": [
        "github-actions",
        "gradle-wrapper"
      ],
      "groupName": "gradle and github actions"
    },
    {
      "matchDepTypes": [
        "plugin"
      ],
      "groupName": "gradle and github actions"
    },
    {
      "matchFileNames": [
        "build-logic/*",
        "buildSrc/*"
      ],
      "groupName": "gradle and github actions"
    }
  ],
  "semanticCommitType": "build",
  "commitMessagePrefix": "chore(deps): "
}
